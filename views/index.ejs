<form method="post" action="/insertdata" enctype="multipart/form-data">
    <table border="1">
        <tr>
            <td>BOOK NAME : </td>
            <td><input type="text" name="book_name"></td>
        </tr>
        <tr>
            <td>BOOK PRICE : </td>
            <td><input type="number" name="book_price"></td>
        </tr>
        <tr>
            <td>BOOK pages : </td>
            <td><span id="price">0</span><input type="range" name="book_pages" min="0" max="1000" oninput="price(this.value)" value="0"></td>
        </tr>
        <tr>
            <td>BOOK author : </td>
            <td><input type="text" name="book_author"></td>
        </tr>
        <tr>
            <td>Image : </td>
            <td><input type="file" name="avatar"></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit"></td>
        </tr>
    </table>
</form>

<script>
    let priceRange = 0;

    function price(value) {
        priceRange = value;
        document.getElementById('price').innerHTML = value;
    }
</script>

